<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#FFFFFF"
    android:id="@+id/Activity2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MATEMÁTICA"
        android:id="@+id/txt1mat"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/titulob3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Próximo Bimestre"
        android:id="@+id/buttonb2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/mat2"
        android:layout_alignBottom="@+id/txt1mat"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cálculo de Notas - 2º Bimestre - P2"
        android:id="@+id/titulob3"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PORTUGUÊS"
        android:id="@+id/txt1port"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/txt1mat"
        android:layout_alignLeft="@+id/txt1mat"
        android:layout_alignStart="@+id/txt1mat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/port2"
        android:layout_alignBottom="@+id/txt1port"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INGLÊS"
        android:id="@+id/txt1ing"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/txt1port"
        android:layout_alignLeft="@+id/txt1port"
        android:layout_alignStart="@+id/txt1port" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/ing2"
        android:layout_alignBottom="@+id/txt1ing"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUÍMICA"
        android:id="@+id/txt1quim"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/txt1ing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/quim3"
        android:layout_alignBottom="@+id/txt1quim"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FÍSICA"
        android:id="@+id/txt1fis"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/quim3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/fis2"
        android:layout_alignBottom="@+id/txt1fis"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIOLOGIA"
        android:id="@+id/txt1bio"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/txt1fis"
        android:layout_alignLeft="@+id/txt1ing"
        android:layout_alignStart="@+id/txt1ing" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/bio2"
        android:layout_alignBottom="@+id/txt1bio"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HISTÓRIA"
        android:id="@+id/txt1hist"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/txt1bio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/hist2"
        android:layout_alignBottom="@+id/txt1hist"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GEOGRAFIA"
        android:id="@+id/txt1geo"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/txt1hist"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/geo2"
        android:layout_alignBottom="@+id/txt1geo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
